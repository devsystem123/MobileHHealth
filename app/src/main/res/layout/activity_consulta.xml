<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">


        <TextView
            android:id="@+id/consultasMarcadas"
            android:onClick="selecionarOpcao"

            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/marcada"
            android:text="Consultas marcadas "
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="13dp"


            />

        <TextView
            android:id="@+id/MarcarConsulta"
            android:onClick="selecionarOpcao"

            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:drawableTop="@drawable/marcar2"
            android:text="Marcar consultas"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"

            />


    </RelativeLayout>

</LinearLayout>
